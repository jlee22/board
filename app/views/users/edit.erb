<form id='edit-user-form' class="hidden" action="/users/<%= @user.id %>" method="post">
  <input name="_method" value="put" type="hidden"/>
  <input type="text" name="user[username]" value ="<%= @user.username %>" placeholder="Name:"><br>
  <input type="text" name="user[email]" value ="<%= @user.email %>" placeholder="Email:"><br>
  <input type="text" name="user[phone_number]" value ="<%= @user.phone_number %>" placeholder="Phone Number:"><br>
  <input type="text" name="user[address]" value ="<%= @user.address %>" placeholder="Address:"><br>
  <input type="password" name="user[password]" value ="<%= @user.password %>" placeholder="Password:"><br>
  <input type="submit" name="commit" value="Update">
</form>
